expect = require('chai').expect

describe 'callback-logger', ->
  it 'returns function which receives callback'
  it 'prints an error message on callback error'
  it 'prints a success message on callback error'
  it 'prints custom success message with underscore templating'
  it 'prints custom error message with underscore templating'
  it 'uses custom colors'

  describe 'success()', ->
    it 'prints success message'

  describe 'error()', ->
    it 'prints success message'